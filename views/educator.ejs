<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Educator Homepage</title>
    <!-- Include Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(90deg, #ffffff 0%, #e2e8f0 50%, #cbd5e0 100%); 
            color: #000000; /* Black font color */
        }

        .container {
            box-shadow: 0 0 10px rgba(121, 113, 113, 0.1); 
            background: linear-gradient(90deg, #f5f5f5 0%, #e0e0e0 50%, #d1d1d1 100%); 
        }

        h2,
        h3 {
            color: #333333; 
        }

        .bg-blue-100 {
            background-color: #f5f5f5; 
        }

        .text-blue-500 {
            color: #333333; 
        }

        .border-blue-500 {
            border-color: #666666; 
        }

        .hover\:bg-blue-600:hover {
            background-color: #e0e0e0; 
        }

        .focus\:border-blue-500:focus {
            border-color: #666666; 
        }

        /* Button Colors */
        .bg-grey-500 {
            background-color: #808080;
        }

        .hover\:bg-grey-600:hover {
            background-color: #707070; 
        }

        .text-white {
            color: #ffffff; 
        }

        .border-grey-500 {
            border-color: #808080; 
        }
    </style>
</head>

<body class="bg-blue-100">
    <%- include('header.ejs') %>
    <div class="container mx-auto p-8">
        <nav>
            <h1 class="text-2xl inline-block font-semibold mt-8 ml-10 px-6 text-blue-500">Welcome, <%= name %>!</h1>

            
        </nav>

        <h2 class="text-2xl font-semibold mb-6 text-blue-500">Create New Course</h2>
        <div class="bg-white p-4 mt-8 mb-5 rounded-md w-1/2">
            <!-- Course Creation Form -->
            <form action="/course" method="post">
                <!-- Course Name -->
                <div class="mb-4">
                    <label for="courseName" class="block text-gray-600 text-sm font-medium mb-2">Course
                        Name</label>
                    <input type="text" id="courseName" name="courseName"
                        class="w-full border-gray-300 border-4 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
                        required>
                </div>

                <!-- Course Description -->
                <div class="mb-4">
                    <label for="courseDescription" class="block text-gray-600 text-sm font-medium mb-2">Course
                        Description</label>
                    <textarea type="text" id="courseDescription" name="courseDescription" rows="3"
                        class="w-full border-gray-300 border-4 rounded-md px-3 py-2 resize-none focus:outline-none focus:border-blue-500"
                        required></textarea>
                </div>

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full bg-grey-500 text-white rounded-md py-2 hover:bg-grey-800 transition duration-300">Create
                    Course</button>
            </form>
        </div>

        <h2 class="text-2xl font-semibold mb-8 text-blue-500">Created Courses</h2>
        <div class="grid grid-cols-1 gap-4">
            <!-- Use grid for vertical alignment with a gap of 4 units -->
            <% for( var i=0; i < createdCourses.length; i++) { %>

            <div class="bg-white flex ml-10 mt-5 p-4 w-full rounded-md">
                <div class="inline-block">
                    <h3 class="text-lg font-semibold mb-2 text-blue-500">
                        <%= i+1 %> : <%= createdCourses[i].name %>
                    </h3>
                </div>

                <div class="flex-grow"></div>
                <!-- This will push the buttons to the right -->

                <div class="flex justify-end items-center space-x-4">
                    <a href="/course/<%= createdCourses[i].id %>">
                        <div
                            class="w-40 h-12 bg-grey-500 text-white rounded-md px-4 py-3 cursor-pointer hover:bg-grey-600 transition duration-300">
                            <h3 class="text-sm font-semibold mb-2">
                                Add Content....
                            </h3>
                        </div>
                    </a>

                    <a href="/courseEnrollments/<%= createdCourses[i].id %>">
                        <div
                            class="w-40 h-12 bg-grey-500 text-white rounded-md px-4 py-3 cursor-pointer hover:bg-grey-600 transition duration-300">
                            <h3 class="text-sm font-semibold mb-2">
                                View Enrollments...
                            </h3>
                        </div>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LMS Application--SignUp Page</title>

    <!-- Include Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff; /* White Background */
            color: #000000; /* Black Text Color */
        }

        .signup-container {
            background-color: #f0f0f0; /* Light Gray color for the container */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
        }

        .text-dark-neon-purple {
            color: #222024; /* Dark Neon Purple color */
        }

        .bg-dark-neon-blue {
            background-color: #444455; /* Dark Neon Blue color */
        }

        .hover\:bg-dark-neon-red:hover {
            background-color: #3c3232; /* Dark Neon Red color */
        }

        .focus\:border-dark-neon-purple:focus {
            border-color: #786f81; /* Dark Neon Purple color */
        }
    </style>
</head>

<body>

    <!-- Signup Form Container -->
    <div class="flex items-center justify-center h-screen">
        <div class="signup-container p-6 rounded-md w-full max-w-md">
            <h2 class="text-2xl font-semibold mb-4 text-dark-neon-purple">Learning Management System</h2>

            <!-- Signup Form -->
            <form action="/user" method="post">
                <!-- Name Field -->
                <div class="mb-4">
                    <label for="name" class="block text-gray-600 text-sm font-medium mb-2 text-dark-neon-purple">Name</label>
                    <input type="text" id="name" name="name"
                        class="w-full border-dark-neon-purple border-4 rounded-md px-3 py-2 focus:outline-none focus:border-dark-neon-purple"
                        required>
                </div>

                <!-- Email Field -->
                <div class="mb-4">
                    <label for="email" class="block text-gray-600 text-sm font-medium mb-2 text-dark-neon-purple">Email</label>
                    <input type="email" id="email" name="email"
                        class="w-full border-dark-neon-purple border-4 rounded-md px-3 py-2 focus:outline-none focus:border-dark-neon-purple"
                        required>
                </div>

                <!-- Password Field -->
                <div class="mb-4">
                    <label for="password" class="block text-gray-600 text-sm font-medium mb-2 text-dark-neon-purple">Password</label>
                    <input type="password" id="password" name="password"
                        class="w-full border-dark-neon-purple border-4 rounded-md px-3 py-2 focus:outline-none focus:border-dark-neon-purple"
                        required>
                </div>

                <!-- Role Dropdown -->
                <div class="mb-4">
                    <label for="role" class="block text-gray-600 text-sm font-medium mb-2 text-dark-neon-purple">Role</label>
                    <select id="role" name="role"
                        class="w-full border-dark-neon-purple border-4 rounded-md px-3 py-2 focus:outline-none focus:border-dark-neon-purple">
                        <option value="Student">Student</option>
                        <option value="Educator">Educator</option>
                    </select>
                </div>

                <!-- Signup Button -->
                <button type="submit"
                    class="w-full bg-dark-neon-blue text-white rounded-md py-2 hover:bg-dark-neon-red transition duration-300">Sign
                    Up</button>
            </form>
        </div>
    </div>

</body>

</html>
